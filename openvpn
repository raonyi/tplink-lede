# OpenVPN config file to be saved as /etc/config/openvpn
package openvpn
config openvpn 'myvpn'
	option enabled '1'
	option dev 'tun'
	option port '80'
	option proto 'udp'
	option status '/var/log/openvpn_status.log'
	option log '/tmp/openvpn.log'
	option verb '3'
	option mute '5'
	option keepalive '10 120'
	option persist_key '1'
	option persist_tun '1'
	option user 'nobody'
	option group 'nogroup'
	option ca '/nfs/tpblau-chroot/etc/easy-rsa/keys/ca.crt'
	option cert '/nfs/tpblau-chroot/etc/easy-rsa/keys/myvpn.crt'
	option key '/nfs/tpblau-chroot/etc/easy-rsa/keys/myvpn.key'
	option dh '/nfs/tpblau-chroot/etc/easy-rsa/keys/dh2048.pem'
	option mode 'server'
	option tls_server '1'
	option tls_auth '/nfs/tpblau-chroot/etc/easy-rsa/keys/ta.key 0'
	option server '10.8.0.0 255.255.255.0'
	option topology 'subnet'
	option route_gateway 'dhcp'
	option client_to_client '1'
	list push 'persist-key'
	list push 'persist-tun'
	list push 'redirect-gateway def1'
	# allow your clients to access to your network
	list push 'route 192.168.1.0 255.255.255.0'
	# push DNS to your clients
	#list push 'dhcp-option DNS 192.168.1.1'
	list push 'dhcp-option DNS 8.8.8.8'
	option comp_lzo 'no'
